{
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "babel-eslint", // es6用のparserはoptionsの仲へ
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/recommended",
    "plugin:prettier/recommended",
    "prettier/vue"
  ],
  "plugins": [
    "vue"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {},
  "rules": {
    "camelcase": [
      2,
      {
        "properties": "always"
      }
    ],
    "vue/component-name-in-template-casing": "off"
  }
}
